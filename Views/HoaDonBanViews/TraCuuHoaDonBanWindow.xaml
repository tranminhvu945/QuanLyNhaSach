<Window x:Class="QuanLyNhaSach.Views.HoaDonBanViews.TraCuuHoaDonBanWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:helpers="clr-namespace:QuanLyNhaSach.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tra Cứu hóa đơn bán sách"
    Width="1045"
    Height="750"
    Style="{StaticResource WindowPopupStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Border Style="{StaticResource WindowPopUpBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="1" />
                <RowDefinition Height="655" />
                <RowDefinition Height="1" />
                <RowDefinition Height="45" />
            </Grid.RowDefinitions>

            <Border Grid.Row="1" Background="Black" />
            <Border Grid.Row="3" Background="Black" />

            <!--  Header  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*" />
                    <ColumnDefinition Width=".5*" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Margin="20,15,0,0"
                    VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource WindowHeaderTextBlockStyle}" Text="Tra cứu Hóa đơn bán sách" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <Button
                        Command="{Binding CloseWindowCommand}"
                        Content="❌"
                        Style="{StaticResource WindowCloseButtonStyle}" />
                </StackPanel>
            </Grid>

            <!--  Body  -->
            <Border Grid.Row="2" Style="{StaticResource WindowBorderContentWrapper}">
                <Grid Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Line 1  -->
                    <Grid
                        Grid.Row="0"
                        Width="970"
                        Height="65"
                        >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="370" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="370" />
                        </Grid.ColumnDefinitions>

                        <!--  Mã hóa đơn  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="21*" />
                                <RowDefinition Height="14"/>
                                <RowDefinition Height="30*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Mã hóa đơn" />
                            <TextBox
                                Grid.Row="2"
                                Margin="0"
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding MaHoaDon}" />
                        </Grid>

                        <!--Ngày lập-->
                        <Grid Width="370" Height="65" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="21*" />
                                <RowDefinition Height="14"/>
                                <RowDefinition Height="30*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Ngày lập" />

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                      Grid.Column="0"
                                      Style="{StaticResource RedHighlightTextBlockStyle}"
                                      Text="Từ" />
                                <DatePicker
                                      Grid.Column="1"
                                      Width="140"
                                      Height="30"
                                      Margin="0"
                                      SelectedDate="{Binding NgayLapHoaDonFrom}"
                                      SelectedDateFormat="Short"
                                      Language="vi-VN"
                                      Style="{StaticResource StandardDatePickerStyle}" />

                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Đến" />
                                <DatePicker
                                    Grid.Column="3"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    SelectedDate="{Binding NgayLapHoaDonTo}"
                                    SelectedDateFormat="Short"
                                    Language="vi-VN"
                                    Style="{StaticResource StandardDatePickerStyle}" />
                            </Grid>
                        </Grid>
                        <!--  Tổng giá trị  -->
                        <Grid Grid.Column="4" Width="370" Height="65">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="21*" />
                                <RowDefinition Height="14"/>
                                <RowDefinition Height="30*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Tổng giá trị" />

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Từ" />

                                <TextBox
                                    Grid.Column="1"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding TongTienFrom}" />

                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Đến" />

                                <TextBox
                                    Grid.Column="3"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding TongTienTo}" />
                            </Grid>
                            
                        </Grid>


                    </Grid>

                    <!--Line 2-->
                    <Grid
                        Grid.Row="2"
                        Width="970"
                        Height="86">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>



                        <Grid Grid.Column="0"
                              Width="425"
                              Height="86"
                              HorizontalAlignment="Left">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="225" />
                            </Grid.ColumnDefinitions>

                            <!-- Tên khách hàng -->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="42" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                Grid.Row="0"
                                Width="132"
                                Height="42"
                                TextWrapping="Wrap"
                                Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Tên khách hàng được nhập" />

                                <TextBox
                                Grid.Row="2"
                                    Margin="0"
                                    Width="170"
                                    Height="30"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding TenKhachHang}"/>



                            </Grid>

                            <!--Điện thoại-->
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="42" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                Grid.Row="0"
                                Width="200"
                                Height="42"
                                TextWrapping="Wrap"
                                Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Điện thoại của khách hàng được nhập" />

                                <TextBox
                                Grid.Row="2"
                                    Margin="0"
                                    Width="170"
                                    Height="30"
                                    HorizontalAlignment="Left"
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding DienThoai}" />
                            </Grid>


                        </Grid>



                        <!-- Địa chỉ -->
                        <Grid Grid.Column="3" HorizontalAlignment="Right"
                              Width="370"
                              Height="86">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="42" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Width="200"
                                Height="42"
                                TextWrapping="Wrap"
                                Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Địa chỉ của khách hàng được nhập" />

                            <TextBox
                                Grid.Row="2"
                                Margin="0"
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding DiaChi}" />
                        </Grid>

                    </Grid>

                    <!--Line 3-->
                    <Grid
                        Grid.Row="4"
                        Width="970"
                        Height="86">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="370" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="370" />
                        </Grid.ColumnDefinitions>

                        <!-- Email -->
                        <Grid Grid.Column="0" Width="370" Height="86" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="42" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Width="200"
                                Height="42"
                                TextWrapping="Wrap"
                                Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Email của khách hàng được nhập" />

                            <TextBox
                                Grid.Row="2"
                                Margin="0"
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding Email}" />
                        </Grid>
                        <!--Tiền nợ-->
                        <Grid Grid.Column="2" Width="370" Height="86" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="42" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Width="200"
                                Height="42"
                                Margin="0"
                                TextWrapping="Wrap"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Tiền nợ của khách hàng được nhập" />

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Từ" />

                                <TextBox
                                    Grid.Column="1"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding TienNoFrom}" />

                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Đến" />

                                <TextBox
                                    Grid.Column="3"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding TienNoTo}" />
                            </Grid>

                        </Grid>

                    </Grid>


                    <!--Line 4-->
                    <Grid
                        Grid.Row="6"
                        Width="970"
                        Height="86"
                        >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="170" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="170" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="369" />
                        </Grid.ColumnDefinitions>

                        <!-- Tên sách -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="42" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Width="90"
                                Height="42"
                                TextWrapping="Wrap"
                                Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Tên sách được nhập" />

                            <ComboBox
                                Grid.Row="2"
                                ItemsSource="{Binding Sachs}"
                                SelectedItem="{Binding SelectedSach}"
                                Style="{StaticResource StandardComboBoxStyle}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TenSach}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

                        <!-- Thể loại -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="42" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Width="168"
                                Height="42"
                                TextWrapping="Wrap"
                                Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Thể loại của sách được nhập" />

                            <ComboBox
                                Grid.Row="2"
                                ItemsSource="{Binding TheLoais}"
                                SelectedItem="{Binding SelectedTheLoai}"
                                Style="{StaticResource StandardComboBoxStyle}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

                        <!-- Tác giả -->
                        <Grid Grid.Column="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="42" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Width="160"
                                Height="42"
                                TextWrapping="Wrap"
                                Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Tác giả của sách được nhập" />

                            <ComboBox
                                Grid.Row="2"
                                ItemsSource="{Binding TacGias}"
                                SelectedItem="{Binding SelectedTacGia}"
                                Style="{StaticResource StandardComboBoxStyle}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

                        <!--Số lượng tồn-->

                        <Grid Grid.Column="6" Width="369" Height="86">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="42" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Width="168"
                                Height="42"
                                Margin="0"
                                TextWrapping="Wrap"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Số lượng tồn của sách được nhập" />

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Từ" />

                                <TextBox
                                    Grid.Column="1"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding SoLuongTonFrom}" />

                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Đến" />

                                <TextBox
                                    Grid.Column="3"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding SoLuongTonTo}" />
                            </Grid>



                        </Grid>

                    </Grid>

                    <!--Line 5-->
                    <Grid
                        Grid.Row="8"
                        Width="970"
                        Height="86"                        
                        >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="370" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="370" />
                        </Grid.ColumnDefinitions>

                        <!-- Đơn giá bán -->
                        <Grid Grid.Column="2" Width="369" Height="86">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="42" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Width="168"
                                Height="42"
                                Margin="0"
                                TextWrapping="Wrap"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Đơn giá bán của sách được nhập" />

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Từ" />

                                <TextBox
                                    Grid.Column="1"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding DonGiaBanFrom}" />

                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Đến" />

                                <TextBox
                                    Grid.Column="3"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding DonGiaBanTo}" />
                            </Grid>

                        </Grid>

                        <!-- Số lượng bán -->
                        <Grid Grid.Column="0" Width="369" Height="86">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="42" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Width="168"
                                Height="42"
                                Margin="0"
                                TextWrapping="Wrap"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Số lượng bán của sách được nhập" />

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Từ" />

                                <TextBox
                                    Grid.Column="1"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding SoLuongBanFrom}" />

                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Đến" />

                                <TextBox
                                    Grid.Column="3"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding SoLuongBanTo}" />
                            </Grid>

                        </Grid>
                        
                    </Grid>

                    <!--Line 6-->

                        <!-- Thành Tiền -->
                    <Grid Grid.Row="10" Width="369" Height="86" HorizontalAlignment="Left" Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="42" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Width="150"
                                Height="42"
                                Margin="0"
                                TextWrapping="Wrap"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Thành tiền của sách được nhập" />

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Từ" />

                                <TextBox
                                    Grid.Column="1"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding ThanhTienFrom}" />

                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    Style="{StaticResource RedHighlightTextBlockStyle}"
                                    Text="Đến" />

                                <TextBox
                                    Grid.Column="3"
                                    Width="140"
                                    Height="30"
                                    Margin="0"
                                    Style="{StaticResource StandardTextBoxStyle}"
                                    Text="{Binding ThanhTienTo}" />
                            </Grid>


                    </Grid>



                </Grid>
            </Border>

            <!--  Footer  -->
            <Grid
                Grid.Row="4"
                Width="970"
                Height="30">
                <Button 
                    HorizontalAlignment="Left"
                    Command="{Binding SearchHoaDonCommand}" Style="{StaticResource WindowPrimaryButtonStyle}" Width="190">
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Margin="0,0,10,0" Icon="Search" />
                        <TextBlock Text="Tra cứu hóa đơn" />
                    </StackPanel>
                </Button>

                <Button 
                    HorizontalAlignment="Right"
                    Command="{Binding CloseWindowCommand}" Style="{StaticResource WindowSignoutButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Margin="0,0,10,0" Icon="SignOut" />
                        <TextBlock Text="Thoát" />
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>


