<Window x:Class="QuanLyNhaSach.Views.TraCuuPhieuNhapSachWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:helpers="clr-namespace:QuanLyNhaSach.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tra cứu phiếu nhập sách"
    Width="844"
    Height="418"
    Style="{StaticResource WindowPopupStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Border Style="{StaticResource WindowPopUpBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="1" />
                <RowDefinition Height="323" />
                <RowDefinition Height="1" />
                <RowDefinition Height="45" />
            </Grid.RowDefinitions>

            <Border Grid.Row="1" Background="Black" />
            <Border Grid.Row="3" Background="Black" />

            <!--  Header  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*" />
                    <ColumnDefinition Width=".5*" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Margin="20,15,0,0"
                    VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource WindowHeaderTextBlockStyle}" Text="Tra cứu Phiếu nhập sách" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <Button
                        Command="{Binding CloseWindowCommand}"
                        Content="❌"
                        Style="{StaticResource WindowCloseButtonStyle}" />
                </StackPanel>
            </Grid>

            <!--  Body  -->
            <Border Grid.Row="2" Style="{StaticResource WindowBorderContentWrapper}">
                <Grid Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="65" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="197" />

                    </Grid.RowDefinitions>

                    <!--  Line 1  -->
                    <Grid
                        Grid.Row="0"
                        Width="570"
                        Height="65"
                        HorizontalAlignment="Left"
                        >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="370" />

                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="21*" />
                                <RowDefinition Height="14" />
                                <RowDefinition Height="30*" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Mã phiếu nhập" />
                            <TextBox
                                Grid.Row="2"
                                Margin="0"
                                HorizontalAlignment="Left"
                                Width="170"
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding MaPhieuNhapSach}" />
                        </Grid>
                        <Grid Width="370" Height="65" Grid.Column="2">
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="21*" />
                                <RowDefinition Height="14"/>
                                <RowDefinition Height="30*" />
                            </Grid.RowDefinitions>
                            

                            <TextBlock
                                Grid.Row="0"
                                Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Ngày nhập" />
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="140" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                Grid.Column="0"
                                
                                Style="{StaticResource RedHighlightTextBlockStyle}"
                                Text="Từ" />
                                <DatePicker
                                Grid.Column="1"
                                Width="140"
                                Height="30"
                                    Margin="0,0,0,0"
                                SelectedDate="{Binding NgayNhapFrom}"
                                Style="{StaticResource StandardDatePickerStyle}" />
                                <TextBlock
                                Grid.Column="2"
                                    HorizontalAlignment="Center"
                                Style="{StaticResource RedHighlightTextBlockStyle}"
                                Text="Đến" />
                                <DatePicker
                                Grid.Column="3"
                                Margin="0,0,0,0"
                                    HorizontalAlignment="Right"
                                Width="140"
                                Height="30"
                                SelectedDate="{Binding NgayNhapTo}"
                                Style="{StaticResource StandardDatePickerStyle}" />
                            </Grid>

                        </Grid>


                    </Grid>
                    <!--  Line 2, 3  -->
                    <Grid 
                        Width="769"
                        Height="197"
                        HorizontalAlignment="Left"
                        Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="86" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="86" />
                        </Grid.RowDefinitions>
                        <!--Line 2-->
                        <Grid
                            Width="570"
                            Height="86"
                            HorizontalAlignment="Left"
                        Grid.Row="0"
                        >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="170" />
                            </Grid.ColumnDefinitions>


                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="42" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                Grid.Row="0"
                                    Width="90"
                                    Height="42"
                                    TextWrapping="Wrap"
                                    Margin="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Tên sách được nhập" />
                                <ComboBox
                                Grid.Row="2"
                                ItemsSource="{Binding Saches}"
                                SelectedItem="{Binding SelectedSach}"
                                Style="{StaticResource StandardComboBoxStyle}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding TenSach}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="42" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                Grid.Row="0"
                                    Width="168"
                                    Height="42"
                                    TextWrapping="Wrap"
                                    Margin="0"                                    
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Thể loại của sách được nhập" />
                                <ComboBox
                                Grid.Row="2"
                                ItemsSource="{Binding ListTheLoai}"
                                SelectedItem="{Binding SelectedTheLoai}"
                                Style="{StaticResource StandardComboBoxStyle}">
                                </ComboBox>
                            </Grid>

                            <Grid Grid.Column="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="42" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                Grid.Row="0"
                                    Width="168"
                                    Height="42"
                                    TextWrapping="Wrap"
                                    Margin="0"         
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Tác giả của sách được nhập" />
                                <ComboBox
                                Grid.Row="2"
                                Width="170"
                                Height="30"
                                ItemsSource="{Binding ListTacGia}"
                                SelectedItem="{Binding SelectedTacGia}"
                                Style="{StaticResource StandardComboBoxStyle}">
                                </ComboBox>
                            </Grid>
                        </Grid>
                        <!--Line 3-->
                        <Grid
                        Grid.Row="2"
                            Width="769"
                            Height="86"
                            HorizontalAlignment="Left"
                        >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="369" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="369" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="42" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>


                                <TextBlock
                                Grid.Row="0"
                                    Width="168"
                                    Height="42"
                                    Margin="0"
                                    TextWrapping="Wrap"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Số lượng tồn của sách được nhập" />

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource RedHighlightTextBlockStyle}"
                                Text="Từ" />
                                    <TextBox
                                Grid.Column="1"
                                Width="140"
                                Height="30"
                                Margin="0,0,0,0"
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding SoLuongTonFrom}" />
                                    <TextBlock
                                Grid.Column="2"
                                     
                                Style="{StaticResource RedHighlightTextBlockStyle}"
                                Text="Đến" />
                                    <TextBox
                                Grid.Column="3"
                                Width="140"
                                Height="30"
                                Margin="0,0,0,0"                                         
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding SoLuongTonTo}" />
                                </Grid>
                            </Grid>


                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="42" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                Grid.Row="0"
                                    Width="168"
                                    Height="42"
                                    Margin="0"
                                    TextWrapping="Wrap"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Số lượng nhập của sách được nhập" />
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource RedHighlightTextBlockStyle}"
                                Text="Từ" />
                                    <TextBox
                                Grid.Column="1"
                                Width="140"
                                Height="30"
                                Margin="0,0,0,0"                                         
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding SoLuongNhapFrom}" />
                                    <TextBlock
                                Grid.Column="2"
                                Style="{StaticResource RedHighlightTextBlockStyle}"
                                Text="Đến" />
                                    <TextBox
                                Grid.Column="3"
                                Width="140"
                                Height="30"
                                Margin="0,0,0,0"                                         
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding SoLuongNhapTo}" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                </Grid>
            </Border>

            <!--  Footer  -->
            <Grid
                Grid.Row="4"
                Width="769"
                Height="30">
                <Button 
                    HorizontalAlignment="Left"
                    Command="{Binding SearchPhieuNhapSachCommand}" Style="{StaticResource WindowPrimaryButtonStyle}" Width="273">
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Margin="0,0,10,0" Icon="Search" />
                        <TextBlock Text="Tra cứu phiếu nhập sách" />
                    </StackPanel>
                </Button>

                <Button 
                    HorizontalAlignment="Right"
                    Command="{Binding CloseWindowCommand}" Style="{StaticResource WindowSignoutButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Margin="0,0,10,0" Icon="SignOut" />
                        <TextBlock Text="Thoát" />
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>

