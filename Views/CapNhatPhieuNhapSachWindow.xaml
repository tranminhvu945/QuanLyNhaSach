<Window x:Class="QuanLyNhaSach.Views.CapNhatPhieuNhapSachWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:helpers="clr-namespace:QuanLyNhaSach.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Lập phiếu nhập sách"
    Width="890"
    Height="462"
    Style="{StaticResource WindowPopupStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <helpers:RowToIndexConverter x:Key="RowToIndexConverter" />
    </Window.Resources>

    <Border Style="{StaticResource WindowPopUpBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="1" />
                <RowDefinition Height="365" />
                <RowDefinition Height="1" />
                <RowDefinition Height="45" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*" />
                    <ColumnDefinition Width=".5*" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Margin="20,15,0,0"
                    VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource WindowHeaderTextBlockStyle}" Text="Cập nhật phiếu nhập sách" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <Button
                        Command="{Binding CloseWindowCommand}"
                        Content="❌"
                        Style="{StaticResource WindowCloseButtonStyle}" />
                </StackPanel>
            </Grid>

            <Border Grid.Row="1" Background="Black" />
            <Border Grid.Row="3" Background="Black" />

            <!--  Body  -->
            <Border Grid.Row="2" Style="{StaticResource WindowBorderContentWrapper}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="114*" />
                        <RowDefinition Height="178*" />
                    </Grid.RowDefinitions>

                    <!--  Line 1  -->
                    <Grid
                        Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Line 1-->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Mã phiếu nhập" />
                                <TextBox
                                Grid.Column="1"
                                Style="{StaticResource ReadOnlyTextBoxStyle}"
                                Text="{Binding MaPhieuNhapSach}"/>


                            </Grid>

                            <Grid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"

                                HorizontalAlignment="Right"
                                Text="Ngày Nhập" />
                                <DatePicker
                                Grid.Column="1"
                                SelectedDate="{Binding NgayNhap}"
                                Style="{StaticResource StandardDatePickerStyle}" />

                            </Grid>



                        </Grid>

                        <!--Line 2-->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                 Grid.Column="0"
                                 Style="{StaticResource FieldLabelTextBlockStyle}"
                                 Text="Số lượng tồn tối đa để được nhập" />
                                <TextBox
                                 Grid.Column="1"
                                 Style="{StaticResource ReadOnlyTextBoxStyle}"
                                 Text="{Binding SoLuongTonToiDa}" />

                            </Grid>

                        </Grid>

                        <!--Line 3-->
                        <Grid Grid.Row="4">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Số lượng nhập tối thiểu" />
                                <TextBox
                                Grid.Column="1"
                                Style="{StaticResource ReadOnlyTextBoxStyle}"
                                Text="{Binding SoLuongNhapToiThieu}" />

                            </Grid>



                        </Grid>


                    </Grid>

                    <!--  Line 3 - The DataGrid (Preserved as requested)  -->
                    <Border
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        Background="White"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="5">

                        <DataGrid
                            ItemsSource="{Binding DanhSachDauSachPhieuNhap}"
                            SelectedItem="{Binding SelectedDauSachPhieuNhap}"
                            Style="{StaticResource BaoCaoDataGridStyle}">

                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="Auto"
                                    ElementStyle="{StaticResource BaoCaoTextBlockStyle}"
                                    Header="STT"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding Converter="{StaticResource RowToIndexConverter}" RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Width="200" Header="Tên sách">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox
                                                Width="180"
                                                Margin="0,5,0,5"
                                                VerticalAlignment="Center"
                                                Background="White"
                                                ItemsSource="{Binding DanhSachSach}"
                                                SelectedItem="{Binding SelectedSach, UpdateSourceTrigger=PropertyChanged}"
                                                Style="{StaticResource SmallComboBoxStyle}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding TenSach}" />
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn
                                    Width="150"
                                    Header="Tác giả"
                                    IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border 
                                                Width="130"
                                                Style="{StaticResource BaoCaoBorderStyle}"
                                                    >
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    Text="{Binding TacGia}"
                                                    Style="{StaticResource BaoCaoTemplateTextBlockStyle}"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                                <DataGridTemplateColumn
                                    Width="180"
                                    Header="Thể loại"
                                    IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border
                                                Width="160"
                                                Style="{StaticResource BaoCaoBorderStyle}">
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    Style="{StaticResource BaoCaoTemplateTextBlockStyle}"
                                                    Text="{Binding TheLoai}" />
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                                <DataGridTemplateColumn
                                    Width="Auto"
                                    Header="Số lượng tồn"
                                    IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border
                                                Style="{StaticResource BaoCaoBorderStyle}"
                                                Width="75"
                                                >
                                                <TextBlock
                                                    Style="{StaticResource BaoCaoTemplateTextBlockStyle}"
                                                    Text="{Binding SoLuongTon}"
                                                    />
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Width="Auto" Header="Số lượng nhập">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox
                                                
                                                Text="{Binding SoLuongNhap}"
                                                Style="{StaticResource ColumnTextBoxGridStyle}"/>


                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>




                            </DataGrid.Columns>

                        </DataGrid>
                    </Border>
                </Grid>
            </Border>

            <!--  Footer  -->
            <Grid
                Grid.Row="4"
                HorizontalAlignment="Center"
                Width="815" Height="30">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"  Command="{Binding LapPhieuNhapSachCommand}" Style="{StaticResource WindowPrimaryButtonStyle}" Width="NaN" Margin="1,0,22,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Cập nhật phiếu" />
                    </StackPanel>
                </Button>

                <Button Grid.Column="2" HorizontalAlignment="Right" Command="{Binding CloseWindowCommand}" Style="{StaticResource WindowSignoutButtonStyle}" Width="NaN" Margin="36,0,1,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Margin="0,0,10,0" Icon="SignOut" />
                        <TextBlock Text="Thoát" />
                    </StackPanel>
                </Button>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Margin="0">

                    <Button
                    Command="{Binding ThemDauSachCommand}"
                    Style="{StaticResource PrimaryButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Thêm sách" />
                        </StackPanel>
                    </Button>

                    <Button 
                        Margin="20,0"
                        Command="{Binding XoaDauSachCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Xóa dòng" />
                        </StackPanel>
                    </Button>

                    <Button
                    Command="{Binding ThemDauSachCommand}"
                    Style="{StaticResource PrimaryButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Thêm dòng" />
                        </StackPanel>
                    </Button>

                </StackPanel>



            </Grid>

        </Grid>
    </Border>
</Window>




