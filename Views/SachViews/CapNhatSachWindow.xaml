<Window x:Class="QuanLyNhaSach.Views.SachViews.CapNhatSachWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ThemSachWindow"
    Width="790"
    Height="277"
    Style="{StaticResource WindowPopupStyle}"
    mc:Ignorable="d">

    <Border Style="{StaticResource WindowPopUpBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="1" />
                <RowDefinition Height="180" />
                <RowDefinition Height="1" />
                <RowDefinition Height="45" />
            </Grid.RowDefinitions>

            <Border Grid.Row="1" Background="LightGray" />
            <Border Grid.Row="3" Background="LightGray" />

            <!--  Header  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="101*" />
                    <ColumnDefinition Width="96*"/>
                    <ColumnDefinition Width="197*" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Margin="20,5,0,0"
                    VerticalAlignment="Center" Grid.ColumnSpan="2">
                    <TextBlock Style="{StaticResource WindowHeaderTextBlockStyle}" Text="Cập nhật sách" FontSize="25" Height="30" Width="175" />
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    Margin="334,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <Button
                        Command="{Binding CloseWindowCommand}"
                        Content="❌"
                        Style="{StaticResource WindowCloseButtonStyle}" />
                </StackPanel>
            </Grid>

            <!--  Body  -->
            <Border Grid.Row="2" Style="{StaticResource WindowBorderContentWrapper}" Margin="15,11,15,11" Padding="0,0,0,0">
                <Grid Margin="22,13,22,13">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="72" />
                    </Grid.RowDefinitions>

                    <!--  Line 1  -->
                    <Grid
                        Grid.Row="0"
                        Margin="0, 0, 0, 0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130" />
                            <ColumnDefinition Width="170" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Mã sách  -->
                        <Grid Grid.Column="0">

                            <TextBlock
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Mã sách" Margin="0,0,0,0" />
                        </Grid>

                        <!--  Mã sách  -->
                        <Grid Grid.Column="1">

                            <TextBox
                                Grid.Row="1"
                                Style="{StaticResource ReadOnlyTextBoxStyle}"
                                Text="{Binding MaSach}" Margin="0,0,0,0"/>
                        </Grid>

                    </Grid>

                    <!--  Line 2 empty  -->

                    <!--  Line 3  -->
                    <Grid
                        Grid.Row="2"
                        Margin="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height ="30" />
                            <RowDefinition Height ="12" />
                            <RowDefinition Height ="30" />
                        </Grid.RowDefinitions>

                        <!--  Tên sách, Thể loại  -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="115" />
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Tên sách" Margin="0,0,0,0" />
                            <TextBox
                                Grid.Column="1"
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding TenSach}" Margin="0,0,0,0" />

                            <TextBlock
                                Grid.Column="3"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Thể loại" Margin="0,0,0,0" />
                            <TextBox
                                Grid.Column="4"
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding TheLoai}" Margin="0,0,0,0" />
                        </Grid>

                        <!--  Tác giả  -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="170" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource FieldLabelTextBlockStyle}"
                                Text="Tác giả" Margin="0,0,0,0" />
                            <TextBox
                                Grid.Column="1"
                                Style="{StaticResource StandardTextBoxStyle}"
                                Text="{Binding TacGia}" Margin="0,0,0,0"/>
                        </Grid>

                    </Grid>

                </Grid>
            </Border>

            <!--  Footer  -->
            <Grid
                Margin="15,0,15,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center" Grid.Row="4">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <!-- Nút "Cập nhật sách" -->
                    <ColumnDefinition Width="*" />
                    <!-- Khoảng cách giữa 2 nút -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Nút "Thoát" -->
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                    Command="{Binding CapNhatSachCommand}"
                    Style="{StaticResource WindowPrimaryButtonStyle}" Width="150" HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Margin="0,0,10,0" Icon="Save" />
                        <TextBlock Text="Cập nhật sách" />
                    </StackPanel>
                </Button>

                <Button Grid.Column="2"
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource WindowSignoutButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <fa:FontAwesome Margin="0,0,10,0" Icon="SignOut" />
                        <TextBlock Text="Thoát" />
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>


