<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Drop Shadow Effect for Date Picker Popup  -->
    <DropShadowEffect
        x:Key="DatePickerDropShadowEffect"
        BlurRadius="10"
        Opacity="0.5"
        ShadowDepth="0"
        Color="Black" />

    <!--  Standard DatePicker Style  -->
    <Style x:Key="StandardDatePickerStyle" TargetType="{x:Type DatePicker}">
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="BorderBrush" Value="#33000000" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontFamily" Value="Nunito" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="#9A000000" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Padding" Value="10,0,0,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePicker}">
                    <Border
                        x:Name="mainBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <Grid x:Name="PART_Root">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Button
                                x:Name="PART_Button"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Focusable="False">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Grid>
                                            <Border
                                                Width="30"
                                                Height="30"
                                                Margin="0,0,5,0"
                                                HorizontalAlignment="Right"
                                                Background="Transparent">
                                                <Path
                                                    x:Name="Path"
                                                    Width="20"
                                                    Height="20"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M19,4H17V3a1,1,0,0,0-2,0V4H9V3A1,1,0,0,0,7,3V4H5A3,3,0,0,0,2,7V19a3,3,0,0,0,3,3H19a3,3,0,0,0,3-3V7A3,3,0,0,0,19,4Zm1,15a1,1,0,0,1-1,1H5a1,1,0,0,1-1-1V10H20Zm0-11H4V7A1,1,0,0,1,5,6H7V7A1,1,0,0,0,9,7V6h6V7a1,1,0,0,0,2,0V6h2a1,1,0,0,1,1,1Z"
                                                    Fill="#9A000000"
                                                    Stretch="Uniform" />
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Path" Property="Fill" Value="#0088CC" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="Path" Property="Fill" Value="#006699" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <DatePickerTextBox
                                x:Name="PART_TextBox"
                                Grid.Column="0"
                                Padding="{TemplateBinding Padding}"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                FontFamily="{TemplateBinding FontFamily}"
                                FontSize="{TemplateBinding FontSize}">
                                <DatePickerTextBox.Style>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DatePickerTextBox">
                                                    <Grid>
                                                        <ScrollViewer
                                                            x:Name="PART_ContentHost"
                                                            Margin="0"
                                                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePickerTextBox.Style>
                            </DatePickerTextBox>
                            <Popup
                                x:Name="PART_Popup"
                                AllowsTransparency="True"
                                PlacementTarget="{Binding ElementName=PART_Root}"
                                StaysOpen="False">
                                <Border
                                    Background="White"
                                    BorderBrush="#33000000"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Effect="{StaticResource DatePickerDropShadowEffect}">
                                    <Calendar
                                        x:Name="PART_Calendar"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        CalendarButtonStyle="{DynamicResource DatePickerCalendarButtonStyle}"
                                        CalendarDayButtonStyle="{DynamicResource DatePickerCalendarDayButtonStyle}"
                                        CalendarItemStyle="{DynamicResource DatePickerCalendarItemStyle}" />
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="mainBorder" Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Small DatePicker Style  -->
    <Style
        x:Key="SmallDatePickerStyle"
        BasedOn="{StaticResource StandardDatePickerStyle}"
        TargetType="{x:Type DatePicker}">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Height" Value="36" />
    </Style>

    <!--  Calendar Item Style for DatePicker  -->
    <Style x:Key="DatePickerCalendarItemStyle" TargetType="{x:Type CalendarItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarItem}">
                    <Grid Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Header with Month/Year and Navigation Buttons  -->
                        <Grid Grid.Row="0" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Previous Button  -->
                            <Button
                                x:Name="PART_PreviousButton"
                                Grid.Column="0"
                                Width="30"
                                Height="30"
                                Margin="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Focusable="False">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Grid>
                                            <Border
                                                x:Name="buttonBorder"
                                                Background="Transparent"
                                                CornerRadius="15">
                                                <Path
                                                    Width="10"
                                                    Height="14"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"
                                                    Fill="#9A000000"
                                                    Stretch="Fill" />
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="buttonBorder" Property="Background" Value="#E3F2FD" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="buttonBorder" Property="Background" Value="#BBDEFB" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!--  Header Title (Month/Year)  -->
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Nunito"
                                FontSize="16"
                                FontWeight="Medium"
                                Foreground="#333333"
                                Text="{TemplateBinding DataContext}" />

                            <!--  Next Button  -->
                            <Button
                                x:Name="PART_NextButton"
                                Grid.Column="2"
                                Width="30"
                                Height="30"
                                Margin="5"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Focusable="False">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Grid>
                                            <Border
                                                x:Name="buttonBorder"
                                                Background="Transparent"
                                                CornerRadius="15">
                                                <Path
                                                    Width="10"
                                                    Height="14"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"
                                                    Fill="#9A000000"
                                                    Stretch="Fill" />
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="buttonBorder" Property="Background" Value="#E3F2FD" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="buttonBorder" Property="Background" Value="#BBDEFB" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!--  Days of Week and Month Grid  -->
                        <Grid Grid.Row="1" HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Days of the Week  -->
                            <UniformGrid
                                Grid.Row="0"
                                Margin="5,0,5,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Columns="7"
                                Rows="1">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Foreground="#555555"
                                    Text="Su" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Foreground="#555555"
                                    Text="Mo" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Foreground="#555555"
                                    Text="Tu" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Foreground="#555555"
                                    Text="We" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Foreground="#555555"
                                    Text="Th" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Foreground="#555555"
                                    Text="Fr" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Foreground="#555555"
                                    Text="Sa" />
                            </UniformGrid>

                            <!--  Calendar Grid (days of the month)  -->
                            <Calendar
                                x:Name="PART_MonthView"
                                Grid.Row="1"
                                Margin="10,5,10,10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                IsTodayHighlighted="True" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Calendar Day Button Style for DatePicker  -->
    <Style x:Key="DatePickerCalendarDayButtonStyle" TargetType="{x:Type CalendarDayButton}">
        <Setter Property="Width" Value="35" />
        <Setter Property="Height" Value="35" />
        <Setter Property="FontFamily" Value="Nunito" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarDayButton}">
                    <Grid>
                        <Border
                            x:Name="ButtonBorder"
                            Background="Transparent"
                            CornerRadius="17.5">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#E3F2FD" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#0088CC" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                        </Trigger>
                        <Trigger Property="IsToday" Value="True">
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#0088CC" />
                            <Setter TargetName="ButtonBorder" Property="BorderThickness" Value="1" />
                        </Trigger>
                        <Trigger Property="IsInactive" Value="True">
                            <Setter Property="Foreground" Value="#CCCCCC" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ReadOnly DatePicker Style  -->
    <Style x:Key="ReadOnlyDatePickerStyle" TargetType="{x:Type DatePicker}">
        <Setter Property="Background" Value="#A2A2A2" />
        <Setter Property="BorderBrush" Value="#33000000" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontFamily" Value="Nunito" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Padding" Value="10,0,0,0" />
        <Setter Property="IsEnabled" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePicker}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <Grid x:Name="PART_Root">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <DatePickerTextBox
                                x:Name="PART_TextBox"
                                Grid.Column="0"
                                Padding="{TemplateBinding Padding}"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                FontFamily="{TemplateBinding FontFamily}"
                                FontSize="{TemplateBinding FontSize}"
                                Foreground="{TemplateBinding Foreground}"
                                IsReadOnly="True">
                                <DatePickerTextBox.Style>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DatePickerTextBox">
                                                    <Grid>
                                                        <ScrollViewer
                                                            x:Name="PART_ContentHost"
                                                            Margin="0"
                                                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePickerTextBox.Style>
                            </DatePickerTextBox>
                            <Button
                                x:Name="PART_Button"
                                Grid.Column="1"
                                Width="30"
                                Height="30"
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Focusable="False"
                                IsEnabled="False">
                                <Path
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="M19,4H17V3a1,1,0,0,0-2,0V4H9V3A1,1,0,0,0,7,3V4H5A3,3,0,0,0,2,7V19a3,3,0,0,0,3,3H19a3,3,0,0,0,3-3V7A3,3,0,0,0,19,4Zm1,15a1,1,0,0,1-1,1H5a1,1,0,0,1-1-1V10H20Zm0-11H4V7A1,1,0,0,1,5,6H7V7A1,1,0,0,0,9,7V6h6V7a1,1,0,0,0,2,0V6h2a1,1,0,0,1,1,1Z"
                                    Fill="White"
                                    Opacity="0.7"
                                    Stretch="Uniform" />
                            </Button>
                            <Popup
                                x:Name="PART_Popup"
                                Grid.Column="0"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="False"
                                Placement="Bottom"
                                PlacementTarget="{Binding ElementName=PART_Root}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
