<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Window Border Content Wrapper  -->
    <Style x:Key="WindowBorderContentWrapper" TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="15" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Background" Value="#F7F9FD" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="10"
                    Opacity="0.5"
                    ShadowDepth="0"
                    Color="Black" />
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Window Border  -->
    <Style x:Key="WindowPopUpBorder" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="#DDDDDD" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Background" Value="White" />
    </Style>

    <!--  Pagination Border  -->
    <Style x:Key="PaginationBorder" TargetType="{x:Type Border}">
        <Setter Property="Margin" Value="0,0,20,20" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#E0E0E0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
    </Style>

    <!--  Third Border Widget Style  -->
    <Style x:Key="ThirdBorderWidget" TargetType="Border">
        <Setter Property="Width" Value="441.66667" />
        <Setter Property="Height" Value="130" />
        <Setter Property="Margin" Value="15,10" />
        <Setter Property="Background" Value="#E6F1FD" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>


    <!--  Big Border Widget Style  -->
    <Style x:Key="BigBorderWidget" TargetType="Border">
        <Setter Property="Width" Value="1385" />
        <Setter Property="Height" Value="500" />
        <Setter Property="Margin" Value="15,10" />
        <Setter Property="Background" Value="#F9F9FA" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>

    <!--  Half Small Widget Left Style  -->
    <Style x:Key="HalfSmallWidgetLeft" TargetType="Border">
        <Setter Property="Width" Value="677.5" />
        <Setter Property="Height" Value="400" />
        <Setter Property="Margin" Value="15,10" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Background" Value="#F9F9FA" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>

    <!--  Page Border Wrapper Style  -->
    <Style x:Key="PageBorderWrapper" TargetType="Border">
        <Setter Property="Margin" Value="10" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Background" Value="White" />
        <Setter Property="CornerRadius" Value="10" />
    </Style>

</ResourceDictionary>
